<Window x:Class="zad1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zad1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10,190,10,10">
        <Button Content="Add Studnet" HorizontalAlignment="Left" Margin="24,-148,0,0" VerticalAlignment="Top" Height="40" Width="170" Click="Button_Click"/>
        <Button Content="Remove Student" HorizontalAlignment="Left" Margin="211,-148,0,0" VerticalAlignment="Top" Height="40" Width="170" Click="Button_Click_1"/>
        <DataGrid ItemsSource="Binding StudentsList" Name="dgStudents" AutoGenerateColumns="False" Margin="0,-50,0,0"/>
        <Button Content="SaveToFile" HorizontalAlignment="Left" Margin="400,-148,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.505,0.102" Height="40" Width="170" Click="Button_Click_2"/>
        <Button Content="LoadFromFile" HorizontalAlignment="Left" Margin="585,-148,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.505,0.102" Height="40" Width="170"/>
    </Grid>
</Window>

